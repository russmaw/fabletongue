{
  "expo": {
    "name": "FableTongue",
    "slug": "fabletongue",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6A5ACD"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fabletongue.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for testing.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice input."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6A5ACD"
      },
      "package": "com.fabletongue.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-av",
      "expo-notifications",
      "expo-in-app-purchases",
      "expo-ads-admob"
    ],
    "extra": {
      "eas": {
        "projectId": "0e29c150-c524-4356-92d0-19481ffd932d"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/0e29c150-c524-4356-92d0-19481ffd932d"
    }
  }
} 